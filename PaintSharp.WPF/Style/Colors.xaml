<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--   COLORS   -->
    <Color x:Key="PrimaryColor1">#2D3368</Color>
    <Color x:Key="PrimaryColor2">#1A1E45</Color>
    <Color x:Key="SecondaryColor">#04050F</Color>
    <Color x:Key="ActiveColor">#090B18</Color>
    
    <!--   BRUSHES   -->
    <SolidColorBrush x:Key="PrimaryBrush1" Color="{StaticResource PrimaryColor1}"/>
    <SolidColorBrush x:Key="PrimaryBrush2" Color="{StaticResource PrimaryColor2}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource ActiveColor}"/>

</ResourceDictionary>